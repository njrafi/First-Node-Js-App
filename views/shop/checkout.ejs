<%- include('../includes/head.ejs' )%>
<link rel="stylesheet" href="/css/cart.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <ul class="cart__item-list">
            <% products.forEach(p => { %>
            <% if (p.productId) { %>
            <li class="cart__item">
                <h1><%= p.productId.title %> - <%= p.quantity %>x - <%= p.productId.price%> teka</h1>
            </li>
            <% }}) %>
        </ul>
        <div class='centered'>
            <h2>Total Price: <%= totalSum%> </h2>
        </div>
    </main>
    <%- include('../includes/end.ejs') %>
    <div class="centered">
        <form action="/create-order" method="POST">
            <input type='hidden' name="_csrf" value=<%= csrfToken %>>
            <script src="https://checkout.stripe.com/checkout.js" class="stripe-button" data-key=<%= publishableKey%>
                data-amount="<%= totalSum * 100 %>" data-name="Your Order" data-description="All the items you ordered"
                data-image="https://stripe.com/img/documentation/checkout/marketplace.png" data-locale="auto"
                data-currency="usd">
            </script>
        </form>
    </div>